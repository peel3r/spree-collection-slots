<div class="col-md-3 col-sm-3 col-xs-6" data-hook="order-shipment">
  <h4><%= Spree.t(:shipments) %> <%= link_to "(#{Spree.t(:edit)})", checkout_state_path(:collection) unless order.completed? %></h4>
  <div class="collection">
    <% order.shipments.each do |shipment| %>
      <div>
        <i class='fa fa-truck'></i>
        <%= Spree.t(:shipment_details, stock_location: shipment.stock_location.name, shipping_method: shipment.selected_shipping_rate.name) %><br />
        <%= "<b>Collection Slot :</b> #{ shipment.collection_slot_time_frame }".html_safe if shipment.collection_slot %>
        <%= "<b>Delivery Slot :</b> #{ shipment.delivery_slot_time_frame }".html_safe if shipment.delivery_slot %>

      </div>
    <% end %>
  </div>
  <%= render 'spree/shared/shipment_tracking', order: order if order.shipped? %>
</div>